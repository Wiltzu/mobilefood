<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/food_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:padding="1dp"
        android:maxEms="13"
        android:text="Päivän Take Away salaatti paahdettua broileria ja marinoitua artisokkaa sisältää päivän leivän ja levitteen sekä kahvin"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/food_item_diets"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.9"
        android:layout_gravity="right"
        android:gravity="center"
        android:padding="1dp"
        android:text="L G"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/food_item_prices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1.4"
        android:gravity="right"
        android:padding="1dp"
        android:text="2,60 / 4,60 / 7,50 €"
        android:textSize="12sp" />

</LinearLayout>